<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#51C7FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/username_signup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_account_box"
            android:drawablePadding="8dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/password_signup1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_keyboard"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/password_signup2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password again"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_keyboard"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/sign_up_register"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Register"
                android:textColor="#51C7FD"
                android:background="@drawable/buttom"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/back_to_main"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="#51C7FD"
                android:background="@drawable/buttom"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>