<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#51C7FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="114dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PALAVER"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"

            android:textSize="50dp"
            />

        <EditText
            android:id="@+id/username_signin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_account_box"
            android:drawablePadding="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/password_signin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_keyboard"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/login"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:background="@drawable/buttom"
                android:text="Login"
                android:textColor="#51C7FD" />

            <Button
                android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:background="@drawable/buttom"
                android:text="Register"
                android:textColor="#51C7FD" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="Designed by Xu and Zhu"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>