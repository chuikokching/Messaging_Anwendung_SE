<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#51C7FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/onepiece"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presented by Zhu and Xu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:textSize="17dp"
            />

        <EditText
            android:id="@+id/username_signin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_account_box"
            android:drawablePadding="8dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/password_signin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_keyboard"
            android:drawablePadding="8dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Login"
            android:onClick="onClickLog_in"
            android:textColor="#51C7FD"
            android:background="@drawable/buttom"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Register"
            android:onClick="onClickSignUp_Activity"
            android:textColor="#51C7FD"
            android:background="@drawable/buttom"
            android:layout_marginTop="60dp"
            />

    </LinearLayout>


</LinearLayout>